@model MvcCv.Models.Entity.TblSosyalMedya
@{
    ViewBag.Title = "SayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sosyal Medya Düzenleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Sosyal Medya Adı Giriniz:")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.Label("Sosyal Medya Linki Giriniz:")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("Sosyal Medya Iconu Giriniz:")
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.Id)
    <button class="btn btn-info">Güncelle</button>
</form>

