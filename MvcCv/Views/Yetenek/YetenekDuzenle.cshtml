@model MvcCv.Models.Entity.TblYeteneklerim
@{
    ViewBag.Title = "YetenekDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetenek Düzenleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Yetenek Giriniz:")
    @Html.TextBoxFor(x => x.Yetenek, new { @class = "form-control" })
    <br />
    @Html.Label("Yetkinlik Derecenizi Giriniz:")
    @Html.TextBoxFor(x => x.Oran, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.İd)
    <button class="btn btn-info">Güncelle</button>
</form>

