@using MvcCv.Models.Entity;
@model List<TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanici Adı</th>
        <th>Düzenle</th>
        <th>Kaldır</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.KullaniciAdi</td>
            <td><a href="/Admin/AdminDuzenle/@item.Id" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Admin/AdminSil/@item.Id" class="btn btn-danger">Kaldır</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminEkle" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
